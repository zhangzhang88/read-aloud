{
  "manifest_version": 3,
  "name": "Read Aloud 0.1.0",
  "description": "使用 Edge TTS 实时朗读网页中文本的轻量插件。",
  "version": "0.1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "contextMenus"
  ],
  "host_permissions": [
    "https://dev.microsofttranslator.com/*",
    "https://*.tts.speech.microsoft.com/*",
    "https://*.api.speech.microsoft.com/*",
    "https://twitter.com/*",
    "https://www.twitter.com/*",
    "https://mobile.twitter.com/*",
    "https://x.com/*",
    "https://www.x.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://twitter.com/*",
        "https://www.twitter.com/*",
        "https://mobile.twitter.com/*",
        "https://x.com/*",
        "https://www.x.com/*"
      ],
      "js": ["content-scripts/tweetButton.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Read Aloud",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
